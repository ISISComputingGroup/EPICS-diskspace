record(ai, "$(P)CS:PERCENT_FREE")
{
	field(DTYP, "asynFloat64")
	field(SCAN, "10 second")
    field(PREC, "2")
    field(HOPR, "100")
    field(LOPR, "0")
    field(DESC, "Percent disk space free")
	field(LOLO, "1")
	field(LOW, "5")
	field(EGU, "%")
    info(INTEREST, "HIGH")
	field(INP,"@asyn($(D),0,0)PERCENT_FREE")
}
